############################################################################################################################################################################################
##############################################################################     初始化  ########################################################################################
############################################################################################################################################################################################
function main_initial {

    #如果组件清单不存在，则启动更新模式
    [ -e "$path_list" ] || startcode=1
    
    #定义获取组件清单函数
    function getsrclist { 
        echo "正在载入/更新$1组件清单..."
        local getlist=$(curl -s "$link_gitlist"/"$1")
        [ -z "$(echo "$getlist" | grep "name")" ] && ( echo -e "${RED}$1组件清单不存在(请检查 $link_gitlist/$1 )${NC}"; return )
        paste <(echo "$getlist" | grep "name" | cut -d '"' -f4) <(echo "$getlist" | grep "download_url" | cut -d '"' -f4) >> "$path_list"
    }
    
    #获取组件清单
    ((startcode==1)) && ( echo -n "" > "$path_list"; getsrclist "necessary"; getsrclist "universal" )
    
